<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aig.advanceinnovationgroup.activity.UploadPictureActivity">


    <include
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_10">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/profile"
            app:civ_border_width="2dp"
            android:layout_margin="@dimen/margin_10"
            app:civ_border_color="#FF000000"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your picture"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_file_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/file_text"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:textSize="@dimen/text_size_12"
                android:focusableInTouchMode="false"
                android:layout_margin="@dimen/margin_10"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_browse"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Browse"
                android:textColor="@color/white"
                android:drawableLeft="@mipmap/folder"
                android:padding="@dimen/margin_10"
                android:layout_margin="@dimen/margin_10"
                android:drawablePadding="@dimen/margin_5"
                android:background="@drawable/button_bg"/>

        </LinearLayout>


        <Button
            android:id="@+id/btn_add_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Picture"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:padding="@dimen/margin_10"
            android:layout_margin="@dimen/margin_20"
            android:drawablePadding="@dimen/margin_5"
            android:background="@drawable/button_bg"/>


    </LinearLayout>

</LinearLayout>
