<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aig.advanceinnovationgroup.fragment.AddNewProjectFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_10">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Type"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_10"
            android:textSize="@dimen/margin_15"/>


        <Spinner
            android:id="@+id/sp_project_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Name"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:textSize="@dimen/margin_15"/>


        <EditText
            android:id="@+id/et_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Description"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:textSize="@dimen/margin_15"/>


        <EditText
            android:id="@+id/et_project_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="@string/file_text"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:textSize="@dimen/text_size_12"
                android:focusableInTouchMode="false"
                android:layout_margin="@dimen/margin_10"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Browse"
                android:textColor="@color/white"
                android:drawableLeft="@mipmap/folder"
                android:padding="@dimen/margin_10"
                android:layout_margin="@dimen/margin_10"
                android:drawablePadding="@dimen/margin_5"
                android:background="@drawable/button_bg"/>

        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Project"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:padding="@dimen/margin_10"
            android:layout_margin="@dimen/margin_20"
            android:drawablePadding="@dimen/margin_5"
            android:background="@drawable/button_bg"/>

    </LinearLayout>

</LinearLayout>
