<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:layout_gravity="center">


            <android.support.v7.widget.CardView
                android:id="@+id/cv_articles"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_2"
                app:cardCornerRadius="4dp"
                app:cardBackgroundColor="@color/black"
                android:layout_height="match_parent">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:padding="@dimen/margin_20"
                        android:background="#0b4bb3"
                        android:src="@mipmap/ic_articles"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Articles"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_12"
                        android:textColor="@color/white"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_discussion"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_2"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="@color/black"
                    android:layout_height="match_parent">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:padding="@dimen/margin_20"
                            android:background="#ff7900"
                            android:src="@mipmap/ic_discussion"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discussion"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:layout_gravity="center">


                <android.support.v7.widget.CardView
                    android:id="@+id/cv_project"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_2"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="@color/black"
                    android:layout_height="match_parent">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:padding="@dimen/margin_20"
                            android:background="#a910b7"
                            android:src="@mipmap/ic_project"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Project"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_video"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_2"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="@color/black"
                    android:layout_height="match_parent">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:padding="@dimen/margin_20"
                            android:background="#66bc29"
                            android:src="@mipmap/ic_video"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Video"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:layout_gravity="center">


                <android.support.v7.widget.CardView
                    android:id="@+id/cv_help"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_2"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="@color/black"
                    android:layout_height="match_parent">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:padding="@dimen/margin_20"
                            android:background="#30c5ec"
                            android:src="@mipmap/ic_job"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Job"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_job"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_2"
                    app:cardCornerRadius="4dp"
                    app:cardBackgroundColor="@color/black"
                    android:layout_height="match_parent">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="130dp"
                            android:padding="@dimen/margin_20"
                            android:background="#019973"
                            android:src="@mipmap/ic_help"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Help"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_12"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>
