<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_blog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Fishbone Attrition Contributors for Model Design"
        android:textSize="@dimen/text_size_18"
        android:layout_margin="@dimen/margin_10"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_15"
        android:text="While in pursuit to improve an existing attrition model we comme..."
        android:layout_margin="@dimen/margin_10"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_15"
        android:layout_margin="@dimen/margin_10"
        android:text="Read more...."
        android:textColor="@color/view_bg"
        android:layout_gravity="right"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_filter"/>
</LinearLayout>